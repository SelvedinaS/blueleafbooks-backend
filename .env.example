# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/blueleafbooks

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# Server Port
PORT=3000

# PayPal Configuration (Sandbox)
# For direct-to-author: Create app with type "Platform" (marketplace), not "Merchant"
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
# true = money goes directly to author. false = platform receives, you pay authors manually.
PAYPAL_SEND_TO_AUTHORS=true

# Platform Fee Percentage
PLATFORM_FE_PERCENTAGE=10

# Admin Account (example values)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# Password reset email (required for "Forgot password" to work)
# For Hotmail/Outlook use: smtp-mail.outlook.com, port 587
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USER=blueleafbooks@hotmail.com
EMAIL_PASS=your-password-or-app-password
EMAIL_FROM=blueleafbooks@hotmail.com

# URL of your frontend (where reset link points to)
FRONTEND_BASE_URL=https://your-frontend.netlify.app

# DigitalOcean Spaces (for cover images and PDF files)
SPACES_BUCKET=your-space-name
SPACES_REGION=nyc3
SPACES_KEY=your-spaces-access-key
SPACES_SECRET=your-spaces-secret-key
# Optional: custom CDN/public URL (e.g. https://your-space.nyc3.cdn.digitaloceanspaces.com)
# SPACES_PUBLIC_URL=https://your-space.nyc3.cdn.digitaloceanspaces.com
